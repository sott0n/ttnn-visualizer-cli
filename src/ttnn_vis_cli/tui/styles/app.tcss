/* TTNN Visualizer TUI Styles */

/* Main application */
Screen {
    background: $surface;
}

/* Header styling */
Header {
    dock: top;
    background: $primary;
}

/* Footer styling */
Footer {
    dock: bottom;
    background: $primary-darken-2;
}

/* Tabbed content */
TabbedContent {
    height: 1fr;
}

ContentSwitcher {
    height: 1fr;
}

TabPane {
    padding: 1;
    height: 1fr;
}

/* Operations and Tensors screens */
OperationsScreen, TensorsScreen {
    width: 100%;
    height: 1fr;
}

.section-title {
    padding: 0 0 1 0;
}

.operations-layout, .tensors-layout {
    height: 1fr;
}

.operations-table-container, .tensors-table-container {
    width: 60%;
    height: 100%;
}

.detail-panel {
    width: 40%;
    height: 100%;
    padding: 0 0 0 1;
    border-left: solid $primary;
}

#operations-table, #tensors-table {
    height: 100%;
}

DataTable {
    height: 100%;
}

DataTable > .datatable--cursor {
    background: $primary;
}

/* Dashboard specific styles */
DashboardScreen {
    width: 100%;
    height: 1fr;
}

/* Performance specific styles */
PerformanceScreen {
    width: 100%;
    height: 1fr;
}

.performance-summary-panel {
    height: auto;
    padding: 0 0 1 0;
    margin-bottom: 1;
}

#performance-summary-content {
    padding: 0;
}

.performance-layout {
    height: 1fr;
}

.performance-table-container {
    width: 60%;
    height: 100%;
}

#performance-table {
    height: 100%;
}

/* Progress bar styling for memory bars */
ProgressBar Bar {
    width: 1fr;
}
